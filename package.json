      "src/**/*.{js,jsx}",
      "!src/registerServiceWorker.js",
      "!src/index.js",
      "!src/*.style.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
